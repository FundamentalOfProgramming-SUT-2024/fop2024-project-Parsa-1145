{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main", 
      "args": ["1024"], 
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb", 
      "miDebuggerPath": "/usr/bin/gdb", 
      "preLaunchTask": "build", 
      "externalConsole": true,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "env": {},
      "windows": {
        "MIMode": "lldb",
        "miDebuggerPath": "/usr/bin/lldb"
      }
    }
  ]
}
